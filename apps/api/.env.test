# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Database URLs for testing
DATABASE_URL="postgresql://test_user:test_pass@localhost:5433/test_griffe_db"
MYSQL_URL="mysql://test_user:test_pass@localhost:3307/test_griffe_mysql"
MONGODB_URL="mongodb://localhost:27018/test_griffe_mongo"

# Redis Configuration
REDIS_URL="redis://localhost:6380"

# RabbitMQ Configuration
RABBITMQ_URL="amqp://test_user:test_pass@localhost:5673"

# Kafka Configuration
KAFKA_BROKERS="localhost:9093"
KAFKA_CLIENT_ID="test-audit-system"

# JWT Configuration
JWT_SECRET="test-jwt-secret-key-for-testing-only"
JWT_REFRESH_SECRET="test-refresh-secret-key-for-testing-only"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_SIGNATURE_KEY="test-audit-signature-key"
AUDIT_RETENTION_DAYS=30

# Sync Configuration
SYNC_ENABLED=true
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_CONFLICT_RESOLUTION="timestamp"

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=9091

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL="error"
LOG_FORMAT="json"