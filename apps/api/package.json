{
  "name": "@griffe/api",
  "version": "1.0.0",
  "description": "Multi-tenant API backend for Griffe",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec tsx src/server.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:setup-audit": "psql $DATABASE_URL -f sql/audit-triggers.sql",
    "db:ping": "ts-node-dev --esm src/scripts/db-ping.ts",
    "audit:verify": "ts-node-dev --esm src/scripts/audit-verify.ts",
    "sync:status": "ts-node-dev --esm src/scripts/sync-status.ts",
    "queue:status": "ts-node-dev --esm src/scripts/queue-status.ts",
    "queue:clear": "ts-node-dev --esm src/scripts/queue-clear.ts",
    "metrics:export": "ts-node-dev --esm src/scripts/metrics-export.ts"
  },
  "keywords": [
    "multi-tenant",
    "api",
    "griffe"
  ],
  "author": "Griffe Team",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.0",
    "@prisma/client": "^6.13.0",
    "amqplib": "^0.10.8",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.5.0",
    "mysql2": "^3.9.2",
    "pg": "^8.11.3",
    "prisma": "^6.13.0",
    "prom-client": "^15.1.0",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.0",
    "@types/pg": "^8.15.5",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "testcontainers": "^10.7.2",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
