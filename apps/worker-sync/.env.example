# Environment Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Database Connections
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sync_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_SSL=false

MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=sync_db
MYSQL_USER=root
MYSQL_PASSWORD=mysql_password
MYSQL_SSL=false

MONGODB_URI=mongodb://localhost:27017/sync_db
MONGODB_USER=sync_user
MONGODB_PASSWORD=mongo_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_CLUSTER_MODE=false

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=sync-worker
KAFKA_GROUP_ID=sync-worker-group
KAFKA_TOPICS=dbz.postgres.public.users,dbz.postgres.public.products,dbz.postgres.public.orders
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=sync-exchange
RABBITMQ_QUEUE=sync-queue
RABBITMQ_DLQ=sync-dlq

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=5
QUEUE_BACKOFF_DELAY=1000
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_TIMEOUT_MS=30000
SYNC_MAX_LAG_MS=1000
CONFLICT_RESOLUTION_STRATEGY=timestamp
ENABLE_CONFLICT_DETECTION=true

# Security
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key
SIGNATURE_PRIVATE_KEY=your-rsa-private-key

# Monitoring & Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30000

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
CIRCUIT_BREAKER_MONITOR_TIMEOUT=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_FILE_PATH=./logs/sync-worker.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Development
DEBUG=sync:*
ENABLE_CORS=true
ENABLE_SWAGGER=true