{
  "dashboard": {
    "id": null,
    "title": "Audit System Overview",
    "tags": ["audit", "system", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"api-gateway|sync-worker\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Sync Lag (ms)",
        "type": "graph",
        "targets": [
          {
            "expr": "sync_lag_ms",
            "legendFormat": "{{source_engine}} â†’ {{target_engine}}"
          }
        ],
        "yAxes": [
          {
            "label": "Milliseconds",
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 500, "colorMode": "critical", "op": "gt"},
          {"value": 100, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Audit Write TPS",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(audit_write_tps[5m])",
            "legendFormat": "{{db_engine}}"
          }
        ],
        "yAxes": [
          {
            "label": "Transactions/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(error_total[5m]) / rate(operations_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 1
          }
        ],
        "thresholds": [
          {"value": 0.05, "colorMode": "critical", "op": "gt"},
          {"value": 0.01, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Queue Depth",
        "type": "graph",
        "targets": [
          {
            "expr": "queue_depth",
            "legendFormat": "{{queue_name}}"
          }
        ],
        "yAxes": [
          {
            "label": "Jobs",
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 5000, "colorMode": "critical", "op": "gt"},
          {"value": 1000, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Conflict Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(conflict_total[10m]) / rate(sync_operations_total[10m])",
            "legendFormat": "Conflict Rate"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 0.05, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "db_connections_active",
            "legendFormat": "{{db_engine}} Active"
          },
          {
            "expr": "db_connections_max",
            "legendFormat": "{{db_engine}} Max"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "API Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 1, "colorMode": "warning", "op": "gt"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ]
  }
}